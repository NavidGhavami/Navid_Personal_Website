@using Application.Layer.Utilities
@model Domain.Layer.Dtos.MyInformation.MyInformationList

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="hero-content-box">
                <span class="hero-sub-title">
                    @Model.HeaderTitle
                </span>
                <h1 class="hero-title">
                    @Model.MainTitle
                </h1>

                <div class="hero-image-box d-md-none text-center">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfileImage)
                                                           ? PathExtension.UserProfileOrigin + Model.ProfileImage
                                                           : PathExtension.DefaultProfile )" alt="نوید قوامی" title="نوید قوامی">
                </div>

                <p class="lead text-justify">
                    @Model.Description
                </p>
                <div class="button-box d-flex flex-wrap align-items-center">
                    <a href="#" class="btn tj-btn-secondary">دریافت رزومه <i class="flaticon-download"></i></a>
                    <ul class="ul-reset social-icons">
                        <li>
                            <a href="https://instagram.com/coding.with.navid" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                        </li>
                        <li>
                            <a href="https://linkedin.com/in/navid-ghavami-759464164" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                        </li>
                        <li>
                            <a href="https://github.com/NavidGhavami"><i class="fa-brands fa-github" target="_blank"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6 d-none d-md-block">
            <div class="hero-image-box text-center">
                <img src="@(!string.IsNullOrEmpty(Model.ProfileImage)
                              ? PathExtension.UserProfileOrigin + Model.ProfileImage
                              : PathExtension.DefaultProfile )" alt="نوید قوامی" title="نوید قوامی">
            </div>
        </div>
    </div>
    <div class="funfact-area">
        <div class="row">
            <div class="col-6 col-lg-3">
                <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                    <div class="number"><span class="odometer" data-count="@Model.License">0</span></div>
                    <div class="text">دوره‌ها و<br>گواهی‌نامه‌ها</div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                    <div class="number"><span class="odometer" data-count="@Model.CompletedProject">0</span>+</div>
                    <div class="text">پروژه‌های<br>تکمیل‌شده</div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                    <div class="number"><span class="odometer" data-count="@Model.CooperatingCompany">0</span></div>
                    <div class="text">همکاری با<br>شرکت‌ها / استارتاپ‌ها</div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                    <div class="number"><span class="odometer" data-count="@Model.WorkExperience">0</span>+</div>
                    <div class="text">سال‌های<br>تجربه‌ی حرفه‌ای</div>
                </div>
            </div>
        </div>
    </div>
</div>